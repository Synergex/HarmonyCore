<UserControl x:Class="HarmonyCoreCodeGenGUI.Views.InterfacesTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:uc="clr-namespace:HarmonyCoreCodeGenGUI.UserControls"
             xmlns:vm="clr-namespace:HarmonyCoreCodeGenGUI.ViewModels"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance {x:Type vm:InterfacesTabViewModel}, IsDesignTimeCreatable=True}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/HarmonyCoreCodeGenGUI;component/Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <DockPanel Margin="10,0,10,10">
        <StackPanel DockPanel.Dock="Top">
            <uc:Separator SeparatorTitle="Extended Interfaces"/>
            <uc:TextBox TextBoxText="{Binding XFServerSMCPath,
                                              Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        TextBoxTitle="𝘹𝘧Server SMC Path:"/>
        </StackPanel>
        <DataGrid Margin="0,10,0,0"
                  AutoGenerateColumns="False"
                  CanUserReorderColumns="False"
                  CanUserResizeColumns="False"
                  CanUserResizeRows="False"
                  ItemsSource="{Binding ExtendedInterfaces}"
                  VerticalScrollBarVisibility="Auto">
            <DataGrid.Columns>
                <DataGridTextColumn Width="100"
                                    Binding="{Binding Name}"
                                    Header="Name"/>
                <DataGridCheckBoxColumn Binding="{Binding RequireAuth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Header="Require Authorization"
                                        IsThreeState="True"/>
                <DataGridTextColumn Width="100"
                                    Binding="{Binding RequiredRoles, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    Header="Required Roles"/>
                <DataGridCheckBoxColumn Binding="{Binding GenerateODataController, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Header="Generate OData Controller"
                                        IsThreeState="True"/>
                <DataGridCheckBoxColumn Binding="{Binding GenerateWebAPIController, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Header="Generate Web API Controller"
                                        IsThreeState="True"/>
                <DataGridCheckBoxColumn Binding="{Binding GenerateSignalRHub, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Header="Generate SignalR Hub"
                                        IsThreeState="True"/>
                <DataGridCheckBoxColumn Binding="{Binding GenerateInterface, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Header="Generate Interface"
                                        IsThreeState="True"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</UserControl>