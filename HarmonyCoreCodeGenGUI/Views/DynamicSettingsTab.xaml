<UserControl x:Class="HarmonyCoreCodeGenGUI.Views.DynamicSettingsTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HarmonyCoreCodeGenGUI.Views"
             xmlns:cl="clr-namespace:HarmonyCoreCodeGenGUI.Classes"
             xmlns:ml="clr-namespace:HarmonyCoreCodeGenGUI.Models"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" >
    <UserControl.Resources>
        <DataTemplate DataType="{x:Type ml:SingleItemSettingsBase}">
            <ListView ItemsSource="{Binding DisplayProperties}" ItemTemplateSelector="{StaticResource settingsTemplateSelector}"></ListView>
        </DataTemplate>
        <DataTemplate DataType="{x:Type ml:MultiItemSettingsBase}">
            <DataGrid ItemsSource="{Binding Items}" AutoGenerateColumns="True" AutoGeneratingColumn="DataGrid_AutoGeneratingColumn"></DataGrid>
        </DataTemplate>
    </UserControl.Resources>
</UserControl>
