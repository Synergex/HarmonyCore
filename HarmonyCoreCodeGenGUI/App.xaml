<Application x:Class="HarmonyCoreCodeGenGUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:HarmonyCoreCodeGenGUI"
             xmlns:cl="clr-namespace:HarmonyCoreCodeGenGUI.Classes"
             StartupUri="/Views/MainWindow.xaml">
    <Application.Resources>
        <cl:SettingsTemplateSelector x:Key="settingsTemplateSelector">
            <cl:SettingsTemplateSelector.Resources>
                <DataTemplate x:Key="BooleanProperty">
                    <CheckBox Margin="10,10,0,0"
                      Content="{Binding Prompt}"
                      IsChecked="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </DataTemplate>
                <DataTemplate x:Key="TristateProperty"></DataTemplate>
                <DataTemplate x:Key="StringProperty"></DataTemplate>
                <DataTemplate x:Key="EnumProperty"></DataTemplate>
                <DataTemplate x:Key="StructureProperty"></DataTemplate>
                <DataTemplate x:Key="StructureFieldProperty"></DataTemplate>
                <DataTemplate x:Key="InterfaceProperty"></DataTemplate>
                <DataTemplate x:Key="InterfaceMethodProperty"></DataTemplate>
                
            </cl:SettingsTemplateSelector.Resources>
        </cl:SettingsTemplateSelector>
    </Application.Resources>
</Application>
